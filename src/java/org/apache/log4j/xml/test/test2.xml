<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration SYSTEM "../log4j.dtd">

<!-- This test XML file
   - references an INEXISTENT appender in root
   - has no appender set for root
   - appender A1 has no output target
-->   
<configuration>

	<appender name="A1" class="org.log4j.FileAppender">
                <param name="Append" value="false" />	  	
		<layout class="org.log4j.PatternLayout">
 		    <param name="ConversionPattern"
		           value="---%-5p %c{2} - %m\n"/>
		</layout>
	</appender>
	<category name="org.log4j.xml">
		<priority value="inherited"/>
		<appender-ref ref="A1" />
	</category>
	<root>
	       <priority value="error"/>
	       <appender-ref ref="INEXISTENT" />	       
	</root>
</configuration>
